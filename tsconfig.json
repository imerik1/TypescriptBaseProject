{
 "compilerOptions": {
   "target": "ES2021",
   "module": "commonjs",
   "noLib": false,
   "baseUrl": "src/",
   "outDir": "dist/",
   "declaration": true,
   "declarationMap": true,
   "alwaysStrict": true,
   "importHelpers": true,
   "isolatedModules": true,
   "charset": "utf-8",
   "removeComments": true,
   "resolveJsonModule": true
 },
 "include": ["src/"],
 "exclude": ["node_modules"],
 "compileOnSave": false,
 "ts-node": {
   "typeCheck": true,
   "compiler": "typescript",
 }
}